{
  "shutdown_timeout_sec": 8,
  "markets": [
    {
      "name": "portal",
      "enabled": true,
      "command": [
        "${PYTHON}",
        "-m",
        "src.services.portal.sniper"
      ],
      "cwd": ".",
      "restart": true,
      "restart_delay_sec": 2,
      "env": {
        "PYTHONUNBUFFERED": "1",
        "STRATEGY_FILE": "src/services/portal/config/strategy.json",
        "PORTAL_ACCOUNTS_FILE": "configs/portal_accounts.json",
        "STATE_DB_PATH": "data/portal_trader.db"
      }
    }
  ]
}
